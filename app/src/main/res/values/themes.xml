<resources>
    <!-- Light Theme -->
    <style name="Theme.HabitApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Χρησιμοποίησε σταθερά χρώματα -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/accentColor</item>

        <!-- Χρώμα για το Bottom Navigation Bar -->
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Στυλ για το Bottom Navigation View -->
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="backgroundTint">@color/navigationBarColor</item>
        <item name="itemRippleColor">@color/itemRippleColor</item>
    </style>
</resources>
